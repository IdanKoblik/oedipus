# .editorconfig
# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

[*.{c,cpp,cc,cxx,h,hpp,hxx}]
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 100

tab_width = 4

[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml,json}]
indent_size = 2
